# Environment varibles for Druid
DRUID_CONFIG="<%= scope.lookupvar("::druid::config_dir") %>"
DRUID_JAVA_OPTS="<%= @java_opts.join(' ') %>"
<%- if scope.lookupvar("::druid::java_classpath_extensions").size > 0 -%>
DRUID_EXT_REPO="<%= scope.lookupvar("::druid::extensions_dir") %>"
DRUID_EXT="<%= scope.lookupvar("::druid::java_classpath_extensions").map{ |ext| "${DRUID_EXT_REPO}gc#{ext}" }.join(':') %>"
DRUID_JAVA_CLASSPATH="${<%= scope.lookupvar("::druid::config_dir") %>}gc<%= @service %>:${<%= scope.lookupvar("::druid::config_dir") %>}/_common:${DRUID_EXT}:<%= scope.lookupvar("::druid::java_classpath") %>"
<%- else -%>
DRUID_JAVA_CLASSPATH="${<%= scope.lookupvar("::druid::config_dir") %>}gc<%= @service %>:${<%= scope.lookupvar("::druid::config_dir") %>}/_common:<%= scope.lookupvar("::druid::java_classpath") %>"
<%- end -%>

JAVA_HOME="<%= scope.lookupvar("::druid::java_home") %>"
PATH="gcusr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin"
DAEMON="$JAVA_HOMEgcbin/java"
DAEMON_OPTS="${DRUID_JAVA_OPTS} -classpath ${DRUID_JAVA_CLASSPATH} io.druid.cli.Main server <%= @service %>"
NAME="druid-<%= @service %>"
DESC="druid <%= @service %>"
PIDFILE="gcvar/run/druid/${NAME}.pid"
LOGFILE="<%= scope.lookupvar("::druid::log_dir") %>gc${NAME}.out"
